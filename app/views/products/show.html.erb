<div>
  <div class="product-image">
    <!-- ADD IMAGES HERE -->
  </div>
  <div class="product_info">
    <h4>
      <strong>Name:</strong>
      <%= @product.name %>
    </h4>
    <div>
      <%= image_tag(@product.image_url) %>
    </div>
    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= @product.formatted_price %>
    </p>
  </div>
</div><h3>Reviews</h3>
<% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    Added on: <%= review.created_at %>
  </p>
<% end %>

  <h3>New Review</h3>
<%= render 'reviews/form' %>

