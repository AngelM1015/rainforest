<p id="notice"><%= notice %></p>

<h1>Cart</h1>

<table class="table">
  <thead>
    <tr>
      <th>Pics</th>
      <th>Name</th>
      <!-- <th>Description</th> -->
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart.cart_items.each do |item| %>
    <% product = item.product %>
      <tr>
        <td><%= link_to(product) do %>
        <%= image_tag product.image_url %> <br>
       <h3> <%= product.name %> </h3>
       <% end %>
        <!-- <%= product.description %> -->
        <td><h3>$<%= product.formatted_price %></h3></td> 
        <!-- <td><%= link_to 'Show', product %></td> -->
        <td><%= link_to 'Destroy', cart_item_path(item.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

