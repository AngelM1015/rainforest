<h1>MEN's Products</h1>
 <table>
   <thead>
     <tr>
       <th>Pics</th>
       <th>Name</th>
       <th>Description</th>
       <th>Price</th>
       <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
     <% @mens_shoes.each do |product| %>
       <tr>

         <td><%= link_to(product) do %>
         <%= image_tag product.image_url %>
         <%= product.name %>
         <%= product.description %>
         $<%= product.formatted_price %>
         <%= link_to 'Show', product %></td>
         <% end %>



         <!-- <td><%= link_to 'Edit', edit_product_path(product) %></td> -->
         <!-- <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
         <!-- <td><%= link_to 'Add To Cart', cart_items_path(cart_items: { product_id: product.id, quantity: 1}), method: :post %></td> -->
       </tr>
     <% end %>
   </tbody>
 </table>
